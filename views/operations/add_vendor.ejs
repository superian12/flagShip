<% include __header %>
<div class="row">
    <div class="col-lg-7">
        <div class="container col-lg-10" id="view_vendor">
            <br>
            <h2 class="text-center">Add Vendor</h2>

            <form method="POST" action="/ops/insertvendor">
                <div class="form-group">
                    <span>Vendor Code:</span>
                    <input type="text" class="form-control col-sm-6" name="code" required>
                </div>
                <div class="form-group">
                    <span>Vendor Name:</span>
                    <input type="text" class="form-control" name="name" required>
                </div>
                <div class="form-group">
                    <span>Vendor Address:</span>
                    <input type="text" class="form-control" name="address" required>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <span>Telephone:</span>
                        <input type="number" class="form-control" name="telephone" value="0" >
                    </div>
                    <div class="col">
                        <span>Mobile:</span>
                        <input type="number" class="form-control" name="mobile" value="0">
                    </div>
                </div>
                <br>
                <input type="submit" class="float-right btn btn-lg btn-primary" value="Add Vendor">
                <br>
                
            </form>
        </div>
    </div>
    
    <div class="col">
        <div class="container col-lg-10" id="view_vendor">
            <br>
            <h2 class="text-center">Add Area</h2>
            <form method="POST" action="/ops/addArea">
                <div class="form-group">
                    <span>Area:</span>
                    <input type="text" class="form-control col-sm-10" name="areaName" required>
                </div>
                <div class="form-group">
                    <span> Area Type </span>
                    <select name="areaType" class="form-control col-sm-10" required>
                    <option value="">Select one ...</option>
                    <option value="1">Metro</option>
                    <option value="2">South</option>

                    </select>
                </div>
                <br>
                <input type="submit" class="float-right btn btn-lg btn-primary" value="Add Area">
                <br>
            </form>
        </div>
    </div>
</div>

<script>
<% if(typeof message != 'undefined'){ %>
swal("Done", "", "success");
<% } %>
<% if(typeof error != 'undefined'){ %>
swal("Warning", "Something had failed please try again", "warning");
<% } %>
</script>

<% include __footer %>